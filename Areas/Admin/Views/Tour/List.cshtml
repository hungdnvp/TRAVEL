
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using TRAVEL.Models
@model List<Tour>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tours /</span>List Tours</h4>

    <!-- Bordered Table -->
    <div class="card">
        <h5 class="card-header">List</h5>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Actions</th>
                            <th>Ma Tour</th>
                            <th>Ten Tour</th>
                            <th>Mo ta</th>
                            <th>Num View</th>
                            <th>Dia Diem</th>
                            <th>Num Day</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ 
                            foreach(Tour item in Model)
                            {
                        <tr>
                          <td>
                            <div class="dropdown">
                              <button
                                type="button"
                                class="btn p-0 dropdown-toggle hide-arrow"
                                data-bs-toggle="dropdown"
                              >
                                <i class="bx bx-dots-vertical-rounded"></i>
                              </button>
                              <div class="dropdown-menu">
                                <a class="dropdown-item" href="#"
                                  ><i class="bx bx-edit-alt me-1"></i> Edit</a
                                >
                                <a class="dropdown-item" href="/Admin/Tour/Delete?idTour=@item.MaTour"
                                  ><i class="bx bx-trash me-1"></i> Delete</a
                                >
                              </div>
                            </div>
                          </td>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.MaTour</strong>
                            </td>
                            <td>@item.TenTour</td>
                            <td>@item.Mota</td>
                            <td>@item.NumView</td>
                            <td>@item.DiaDiem</td>
                            <td>@item.NumDay</td>
                        </tr>
                            }


}
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/ Bordered Table -->
</div>
@{
if (ViewBag.alert != null)
            {
                <script>window.alert("@ViewBag.alert")</script>
            }
}
