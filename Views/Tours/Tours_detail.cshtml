                                        </div>
                                        <!-- Heading -->
                                        <h4>Destination <span>5.0</span></h4>
                                        <!-- Progress -->
                                        <div class="progress">
                                            <div class="progress-bar bg-active" style="width: 50%;"></div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Comments section start -->
                                <div class="comments-section clearfix mb-40">
                                    <ul class="comments">
                                        @foreach (var dg in ViewBag.reviews)
                                        {
                                            <li>
                                                <div class="comment">
                                                    <div class="comment-author">
                                                        <a href="#">
