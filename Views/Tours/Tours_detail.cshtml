
@{
    ViewBag.Title = "Tours_detail";
    ViewData["sub_link"] = "Tours";
    ViewData["Title"] = "Tours Detail";
}
@using TRAVEL.Models
@model Tour

@Html.Partial("_banner")

<!-- Tour details page start -->
@{
    int i = 0;
    var night = Model.NumDay - 1;

}
<div class="tour-details-page content-area-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div id="itemDetailsSlider" class="carousel item-details-sliders slide mb-40">
                    <div class="heading-item">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="title">
                                    <h3>@Model.DiaDiem</h3>
                                    <div class="ratings">
                                        @for (int j = 1; j < ViewBag.Numstar[Model.MaTour]; j++)
                                        {
                                            <i class="fa fa-star"></i>
                                            i++;
                                        }
                                        @while (i < 5)
                                        {
                                            <i class="fa fa-star-o"></i>
                                            i++;
                                        }
                                        <span>( 7 Reviews )</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="tour-infomation">
                                    <ul>
                                        <li><i class="flaticon-calendar"></i> @Model.NumDay Days @night Nights</li>
                                        <li><i class="flaticon-team"></i> Group: 5 - 10 People</li>
                                        <li><i class="flaticon-pin"></i> @Model.DiaDiem</li>
                                        <li><i class="flaticon-user"></i> Min Age: 18+</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- main slider carousel items -->
                    <div class="carousel-inner">
                        <div class="active item carousel-item" data-slide-number="0">
                            <img src="~/assets/@Model.LinkImage" class="img-fluid" alt="slider">
                        </div>
                        @foreach (string it in ViewBag.Imgs)
                        {
                            <div class="item carousel-item" data-slide-number="1">
                                <img src="~/assets/img/tour/@it" class="img-fluid" alt="slider">
                            </div>
                        }

                    </div>
                    <!-- main slider carousel nav controls -->
                    <ul class="carousel-indicators smail-item list-inline nav nav-justified">
                        <li class="list-inline-item active">
                            <a id="carousel-selector-0" class="selected" data-slide-to="0" data-target="#itemDetailsSlider">
                                <img src="~/assets/@Model.LinkImage" class="img-fluid" alt="slider">
                            </a>
                        </li>
                        @{i = 1; }
                        @foreach (string it in ViewBag.Imgs)
                        {
                            <li class="list-inline-item">
                                <a id="carousel-selector-1" data-slide-to="@i" data-target="#itemDetailsSlider">
                                    <img src="~/assets/img/tour/@it" class="img-fluid" alt="slider">
                                </a>
                            </li>
                            i++;
                        }
                    </ul>
                </div>
                <!-- Tabbing box start -->
                <div class="tabbing tabbing-box">
                    <ul class="nav nav-tabs mb-40" id="carTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active show" id="one-tab" data-toggle="tab" href="#one" role="tab" aria-controls="one" aria-selected="false"><i class="flaticon-see"></i> Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="6-tab" data-toggle="tab" href="#6" role="tab" aria-controls="6" aria-selected="true"><i class="flaticon-map"></i> Itinerary</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="5-tab" data-toggle="tab" href="#5" role="tab" aria-controls="5" aria-selected="true"><i class="flaticon-pin"></i> Location</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="4-tab" data-toggle="tab" href="#4" role="tab" aria-controls="4" aria-selected="true"><i class="flaticon-video"></i> Video</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="three-tab" data-toggle="tab" href="#three" role="tab" aria-controls="three" aria-selected="true"><i class="flaticon-comment"></i> Reviews</a>
                        </li>
                    </ul>
