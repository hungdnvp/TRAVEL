<!--Script api google map -->
<script type="text/javascript">
    $(function () {
        var map;
        var myLatlng = new google.maps.LatLng(@Model.lat, @Model.lng);
        var myOptions = {
            zoom: 15,
            center: myLatlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        map = new google.maps.Map(document.getElementById("contactMap"), myOptions);
        // Biến text chứa nội dung sẽ được hiển thị
        var text;
        text = "<p align='center' style='height:120px'><img src='/assets/@Model.LinkImage' alt='icon map' style='width:100%;height:100%'/><br><b style='color:#00F' " +
            "style='text-align:center'>@Model.DiaDiem<br />" +
            "</b></p>";
        var infowindow = new google.maps.InfoWindow(
            {
                content: text,
                size: new google.maps.Size(60, 40),
                position: myLatlng
            });
        infowindow.open(map);
        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: "@Model.DiaDiem"
        });

    });
</script>


