                                                        <i class="flaticon-calendar"></i>  @related.NumDay Days / @night Nights
                                                    </div>
                                                    <div class="pull-right">
                                                        <div class="ratings">
                                                            @for (int j = 0; j < ViewBag.Numstar[related.MaTour]; j++)
                                                            {
