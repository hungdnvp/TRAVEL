                                <p>@ViewBag.chitiettour.MoTaTour</p>
                                <br />
                                <div class="information-table manage-table">
                                    <ul>
                                        <li>
                                            <div class="information-info">Dress Code</div>
                                            <div class="information-info2">Casual, comfortable and light</div>
                                        </li>
                                        <li>
                                            <div class="information-info">Price Includes</div>
                                            <div class="information-info2">
