          @foreach (var cmt in Model.BlogComments)
          {
<li>
     @* Main comment session *@
     <div class="comment">
          <div class="comment-author">
               @if (cmt.TaiKhoan.ChiTietTKs.SingleOrDefault().LinkAvatar == null)
               {
<a href="#">
     <img src="~/assets/img/avatar/default.jpg" alt="blog">

</a> }
else
{
<a href="#">
     <img src="~/assets/img/avatar/@cmt.TaiKhoan.ChiTietTKs.SingleOrDefault().LinkAvatar" alt="blog">
</a>}
          </div>
          <div class="comment-content">
               <div class="comment-meta">
                    @if (@cmt.TaiKhoan.ChiTietTKs.FirstOrDefault().Hoten == null)
                    {
<h3>
</h3>}
                    <h3>
                         @cmt.TaiKhoan.ChiTietTKs.FirstOrDefault().Hoten
                    </h3>
                    <div class="comment-meta">
                         @cmt.NgayGio<a href="#">Reply</a>
                    </div>
               </div>
               <p>@cmt.NoiDung</p>
          </div>
     </div>
