
@{
    ViewBag.Title = "Register";
}

@model TRAVEL.Models.TaiKhoan

<!-- Google Tag Manager (noscript) -->
<noscript>
    <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PDTWJ3Z"
            height="0" width="0" style="display:none;visibility:hidden"></iframe>
</noscript>
<!-- End Google Tag Manager (noscript) -->
<div class="page_loader"></div>

<!-- Bg img start -->
<div class="bg-img overview-bgi">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-content-box">
                    <!-- Logo -->
                    <a href="index.html">
                        <img src="~/assets/img/logos/logo.png" class="cm-logo" alt="logo">
                    </a>
                    <!-- details -->
                    <div class="details">
                        <!-- Name -->
                        <h3>Create an account</h3>
                        <!-- Form start -->
                        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @onsubmit = "return verifyPassword()" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.username, "", new { @id = "username", @class = "form-control", @placeholder = "User Name", @required = "true" })
                                @Html.ValidationMessageFor(m => m.username, "", new { @class = "badge badge-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.email, "", new { @id = "email", @class = "form-control", @placeholder = "Email Address", @required = "true" })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "badge badge-danger" })
                            </div>
                            <div class="form-group">
                                @*<input type="Password" class="form-control" name="password" placeholder="Password" required>*@
                                @Html.PasswordFor(m => m.pass, new { @id = "pass", @class = "form-control", @placeholder = "Password", @required = "true" })
                                @Html.ValidationMessageFor(m => m.pass, "", new { @class = "badge badge-danger" })
                                <span id="message" style="color:red;font-size:14px;display:none"> </span>
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.pass, new { @id = "confirm-pass", @class = "form-control", @placeholder = "Confirm Password", @required = "true" })
                                @Html.ValidationMessageFor(m => m.pass, "", new { @class = "badge badge-danger" })
                                <span id="message-confirm" style="color:red;font-size:14px;display:none"> </span>

                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-color btn-md btn-block">Signup</button>
                            </div>
                        }
                        <!-- Form end -->
                    </div>
                    <!-- Sub Footer -->
                    <div class="sub-footer">
                        <span>Already a member? <a href="@Url.Action("Login","Home")">Login here</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Bg img end -->
<!-- Full page search -->
<div id="full-page-search">
    <button type="button" class="close">×</button>
    <form action="#">
        <input type="search" value="" placeholder="type keyword(s) here" />
        <button type="submit" class="btn btn-sm btn-color">Search</button>
    </form>
</div>
@section Script {
    <script>

        function verifyPassword() {
            var pw = document.getElementById("pass").value;
            var pw_confirm = document.getElementById("confirm-pass").value;


            //minimum password length validation
            if (pw.length < 8) {
                document.getElementById("message").innerHTML = "**Password length must be atleast 8 characters";
                document.getElementById("message").setAttribute("style", "color:red;font-size:14px;display:block");
                return false;
            } else {
                document.getElementById("message").setAttribute("style", "color:red;font-size:14px;display:none");
            }

            //maximum length of password validation
            if (pw.length > 15) {
                document.getElementById("message").innerHTML = "**Password length must not exceed 15 characters";
                document.getElementById("message").setAttribute("style", "color:red;font-size:14px;display:block");
                return false;
            } else {
                document.getElementById("message").setAttribute("style", "color:red;font-size:14px;display:none");
            }

            // Confirm
            if (pw != pw_confirm) {
                document.getElementById("message-confirm").innerHTML = "**Confirm Password is not True";
                document.getElementById("message-confirm").setAttribute("style", "color:red;font-size:14px;display:block");
                return false;
            }

            return true;
        }
    </script>
}

