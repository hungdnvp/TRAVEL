
@{
    ViewBag.Title = "ForgotPassword";
}

<!-- Google Tag Manager (noscript) -->
<noscript>
    <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PDTWJ3Z"
            height="0" width="0" style="display:none;visibility:hidden"></iframe>
</noscript>
<!-- End Google Tag Manager (noscript) -->
<div class="page_loader"></div>

<!-- Bg img start -->
<div class="bg-img overview-bgi">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-content-box">
                    <!-- details -->
                    <div class="details">
                        <!-- Name -->
                        <h3>Forgot Password</h3>
                        <!-- Form start -->
                        <div>
                            <p>Please enter your email address. You will then receive an email containing a link to reset your password.</p>
                            <div class="form-group">
                                <label class="form-check-label" for="email">
                                    Your Email
                                </label>
                                <input type="text" class="form-control" name="email" placeholder="example@gmail.com" required>
                            </div>
                            <div class="form-group2" style="display:none">
                                <label class="form-check-label" for="email">
                                    Your Code
                                </label>
                                <input type="text" class="form-control" name="code" placeholder="Code">
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-color btn-md btn-block">Send</button>
                                <span id="error" style="color:red;font-size:14px;display:none"></span>
                            </div>
                        </div>
                        <!-- Form end -->
                    </div>
                    <!-- Sub Footer -->
                    <div class="sub-footer">
                        <span>Don't have an account? <a href="Register">Register here</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Bg img end -->
<!-- Full page search -->
<div id="full-page-search">
    <button type="button" class="close">×</button>
    <form action="#">
        <input type="search" value="" placeholder="type keyword(s) here" />
        <button type="submit" class="btn btn-sm btn-color">Search</button>
    </form>
</div>
